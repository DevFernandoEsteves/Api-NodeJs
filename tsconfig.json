{
    "compilerOptions": {
        "target": "es5", 
        "module": "commonjs", 
        "outDir": "./", 
        "baseUrl": "./src",                             
        "paths": {
            "@modules/*": ["modules/*"],
            "@config/*": ["config/*"],
            "@shared/*": ["shared/*"],
            "@errors/*": ["errors/*"],
            "@utils/*": ["utils/*"],
            "@middleweres/*": ["middleweres/*"]
        },                                 
        "esModuleInterop": true, 
        "experimentalDecorators": true,              
        "emitDecoratorMetadata": true,               
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true, 
        "resolveJsonModule": true
    }
}